<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Update Order</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/data/<%= data._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="data[order_id]" value="<%= data.order_id%>" readonly>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[email]" value="<%= data.email%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[number]" value="<%= data.number%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/data">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>